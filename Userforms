Private Sub ComboBox1_AfterUpdate()
    If ComboBox1.Value <> Empty Then
        Dim X As Integer
            X = 2
            Do Until B_D_items.Cells(X, 9) = ""
                If B_D_items.Cells(X, 9).Value = CStr(ComboBox1.Value) Then
                    'Cod Bodega
                        ty = CStr(B_D_items.Cells(X, 8))
                    Exit Do
                End If
                    X = X + 1
            Loop
    End If
End Sub
